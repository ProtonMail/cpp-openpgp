open_pgp_key = record {
    key_id : string;
	public_key : string;
	private_key : string;
    finger_print : string;
    # false default only used when update keys
isUpdated : bool;
}

encrypt_package = record {
	key_package : binary;
	data_package : binary;
}

encrypt_sign_package = record {
    encrypted : string;
    signature : string;
}

decrypt_sign_verify = record {
    plain_text : string;
    verify : bool;
}

address = record {
    address_id : string;
    #optional
    address_name : string;
    keys: list<open_pgp_key>;
}

